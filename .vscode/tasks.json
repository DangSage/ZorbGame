{
    "tasks": [
        {
            "label": "Compile Resources",
            "type": "shell",
            "command": "windres",
            "args": [
                "${workspaceFolder}\\bin\\resources.rc",
                "-O",
                "coff",
                "-o",
                "${workspaceFolder}\\bin\\resources.res"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build ZorbZenith",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include", // Add this line
                "${workspaceFolder}\\driver.cpp",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\bin\\resources.res",
                "-o",
                "${workspaceFolder}\\ZorbZenith.exe"
            ],
            "problemMatcher": [],
            "dependsOn": ["Compile Resources"]
        }
    ],
    "version": "2.0.0"
}