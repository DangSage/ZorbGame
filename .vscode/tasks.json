{
    "tasks": [
        {
            "label": "Compile Resources",
            "type": "shell",
            "command": "windres",
            "args": [
                "${workspaceFolder}\\bin\\resources.rc",
                "-O",
                "coff",
                "-o",
                "${workspaceFolder}\\bin\\resources.res"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build ZorbZenith",
            "type": "shell",
            "command": "/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}\\libs",
                "-I${workspaceFolder}\\bin",
                "-I${workspaceFolder}\\include",
                "${workspaceFolder}\\bin\\resources.res",
                "${workspaceFolder}\\bin\\*.cpp",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\driver.cpp",
                "-o",
                "${workspaceFolder}/ZorbZenith.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Compile Resources"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run ZorbZenith",
            "type": "shell",
            "command": "${workspaceFolder}\\ZorbZenith.exe",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build ZorbZenith"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}